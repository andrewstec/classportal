{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "preserveConstEnums": true
  },
  "filesGlob": [
    "/src",
    "/test"
  ],
  "exclude": [
    "node_modules"
  ]
}
